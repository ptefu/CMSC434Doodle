<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <course.examples.cmsc434doodle.DoodleView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/doodleView"
        android:layout_above="@+id/clearButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clearButton"
        android:background="@drawable/roundbutton"
        android:layout_alignTop="@+id/brushSizeButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Color/Opacity"
        android:id="@+id/colorButton"
        android:textColor="#ffffff"
        android:background="@drawable/regbutton"
        android:layout_below="@+id/doodleView"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Brush Size"
        android:id="@+id/brushSizeButton"
        android:textColor="#ffffff"
        android:background="@drawable/regbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/doodleView" />

</RelativeLayout>
